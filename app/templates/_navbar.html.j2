{% block navbar %}

<nav class="navbar navbar-expand-lg navbar-light bg-light shadow mb-4">
  <div class="container-fluid">
      <a class="navbar-brand mx-auto" href="{{ url_for('home.index') }}">Kill-A-Watt Electrical Inc.</a>
    <div class="navbar-collapse">
      <ul class="navbar-nav me-auto">
        <li class="nav-item" ><a class="nav-link" href="{{ url_for('customer.index') }}">Customers</a>
      </ul>
    </div>
    <ul class="navbar-nav justify-content-end" >
      {% if current_user.is_authenticated %}
        <li class="nav-item nav-link">
          {{ 'Logged in as: %s' % username.replace(current_user.username,"<b>{}</b>"
            .format(current_user.username)) |safe }}
        <li class="nav-item">
          <a class="nav-link" href="{{ url_for('user_profile.user', username=current_user.username) }}">Profile</a>
        <li class="nav-item"><a class="nav-link" href="{{ url_for('auth.logout') }}">Log Out</a>
      {% else %}
        <li class="nav-item"><a class="nav-link" href="{{ url_for('auth.register') }}">Register</a>
        <li class="nav-item"><a class="nav-link" href="{{ url_for('auth.login') }}">Log In</a>
      {% endif %}
    </ul>
  </div>
</nav>

{% endblock %}
