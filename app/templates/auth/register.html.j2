{% extends 'base.html.j2' %}
{% from 'bootstrap5/form.html' import render_form, render_field, render_form_row %}


{% block content %}
    <h1>Register</h1>
    <div class="row">
        <div class="col-md-4">
            <form action="" method="POST">
                {{ form.hidden_tag() }}
                {{ render_form_row([form.username], col_map={'username': 'col-md-4'}) }}
                {{ render_form_row([form.email], col_map={'email': 'col-md-4'}) }}
                {{ render_form_row([form.password], col_map={'password': 'col-md-4'}) }}
                {{ render_form_row([form.password2], col_map={'Repeat Password': 'col-md-4'}) }}
                {{ render_field(form.submit) }}
            </form>
        </div>
    </div>

{% endblock %}